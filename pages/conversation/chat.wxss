.rong-chat{
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
}

.rong-messages{
  position: absolute;
  top: 0;
  bottom: 100rpx;
}

.rong-editor{
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 15rpx;
  border-top: 1px solid #CCC;
  background-color: #FFF;
  box-sizing: border-box;
}

.rong-editor-input{
  height: 58rpx;
  border-bottom:1px solid #CCC;
  display: inline-block;
  margin-top: 6rpx;
  position: absolute;
  left: 90rpx;
  right: 194rpx;
}

.rong-editor-input:focus{
  border-bottom: 1px solid red;
}

.rong-editor-btn{
  margin-right: 20rpx;
  margin-top: 4rpx;
}
.rong-editor-btn-voice{
  background-image: url("https://rongcloud-image.cn.ronghub.com/o_1chk2kfkpr8pdm31j56t49fg1a.png?e=2147483647&token=livk5rb3__JZjCtEiMxXpQ8QscLxbNLehwhHySnX:7JEmLgDyTGVPaqFkfv1XlIIvKTY=");
