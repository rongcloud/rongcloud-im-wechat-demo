.rong-editor-emojis,.rong-editor-more{
  background-color: #FFF;
  height: 210px;
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
}

.rong-editor-emoji{
  width:60rpx;
  height:60rpx;
  display:inline-block;
  text-align:center;
  margin:7px;
  font-size:30px;
}

.rong-emojis-swiper, .rong-modules-swiper{
  height: 185px;
}

.rong-adapter-box{
  position: absolute;
  bottom: 0;
  width: 100%;
  background:#FFF;
}

.rong-editor-modules{
  height: 60px;
  width: 60px;
  border: 1px solid #d2d2d4;
  border-radius: 15px;
  background-color: #fff;
  padding: 10px 14px 10px 9px;
  box-sizing: border-box;
  margin: 20px;
  float: left;
}

.rong-editor-module{
  height: 40px;
  width: 40px;
  background-repeat: no-repeat;
